---
import { formatDate } from "../../lib/helpers";

interface Props {
  title: string;
  date: Date;
  id: string;
}

const { title, date, id } = Astro.props;
---

<li
  class="list-none w-full text-neutral-100 hover:text-red-400 ease-in-out transition-colors border-b-neutral-400 border-dashed border-b-1 my-2"
>
  <a
    class="decoration-none block w-full py-2"
    href={`/blog/${id}`}
  >
    <div class="flex flex-col md:flex-row md:justify-between md:items-center">
      <p class="font-mono lowercase break-words max-w-full md:max-w-[70%] mb-1 md:mb-0 leading-tight">
        {title}
      </p>
      <time
        class="text-left md:text-right tabular-nums font-mono lowercase text-sm text-neutral-400"
        datetime={date.toISOString()}
        data-date={date.toISOString()}
      >
        {formatDate(date)}
      </time>
    </div>
  </a>
</li>