---
import { formatDate } from "../../lib/helpers";

interface Props {
  title: string;
  date: Date;
  id: string;
}

const { title, date, id } = Astro.props;
---

<li
  class="list-none w-full text-neutral-100 hover:text-red-400 ease-in-out transition-colors border-b-neutral-400 border-dashed border-b-1 my-2"
>
  <a
    class="text-sm md:text-base decoration-none flex justify-between"
    href={`/blog/${id}`}
  >
    <p class="inline-block whitespace-nowrap font-mono lowercase">
      {title}
    </p>
    <time
      class="text-right tabular-nums font-mono lowercase"
      datetime={date.toISOString()}
      data-date={date.toISOString()}
    >
      {formatDate(date)}
    </time>
  </a>
</li>
